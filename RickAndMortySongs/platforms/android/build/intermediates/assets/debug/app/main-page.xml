<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <Page.actionBar>
      <ActionBar backgroundColor="{{ vibrant.color }}" title="Rick and Morty"/>
  </Page.actionBar>

  <StackLayout backgroundColor="{{ lightVibrant.color }}">
  	<Image id="coverImg" height="400" stretch="aspectFill" />
    <Label text="{{ song.name }}" class="title"/>
    <Button text="next" color="#fff" backgroundColor="{{ vibrant.color }}" tap="tapEvent" />
  </StackLayout>

</Page>
